<%- include ('partials/header.ejs') %>
<body>
    <div class="container d-flex justify-content-center text-center mt-3">
        <div class="row">
            <a href="/"class="no-style-href"><h1>Batcomputer</h1></a>
                <div class="col tab p-5">
                    <h1>TO EDIT</h1>
                    <form action="/newupdate" method="post">
                        <input type="hidden" name="criminal_id" value="<%= criminal.id %>">
                        <label for="name" class="mt-3">Name:</label><br>
                        <input type="text" id="name" name="name" value="<%= criminal.name %>" class="search-input outline-default">
                        <br>
                        <label for="age" class="mt-3">Age:</label><br>
                        <input type="text" name="age" id="age" value="<%= criminal.age %>" class="search-input outline-default">
                        <br>
                        <label for="description" class="mt-3">Description:</label><br>
                        <textarea name="description" id="description" class="search-input outline-default"><%= criminal.description %></textarea>
                        <br>
                        <label for="weakness" class="mt-3">Weakness:</label><br>
                        <input type="text" name="weakness" value="<%= criminal.weakness %>" id="weakness" class="search-input outline-default">
                        <br>
                        <label for="risklevel" class="mt-3">Risk Level:</label><br>
                        <select name="risklevel" id="risklevel" class="search-input outline-default">
                            <option value="<%= criminal.risklevel %>" selected><%= criminal.risklevel %></option>
                            <option value="low">Low</option>
                            <option value="average">Average</option>
                            <option value="high">High</option>
                            <option value="dangerous">Dangerous</option>
                        </select>
                        <br>
                        <label for="arrested" class="mt-3">Arrested:</label><br>
                        <select name="arrested" id="arrested" class="search-input outline-default">
                            <option value="<%= criminal.arrested %>" selected><%= criminal.arrested %></option>
                            <option value="yes">Yes</option>
                            <option value="No">No</option>
                        </select>
                        <br>
                        <button type="submit" class="outline-default mt-3">UPDATE</button>
                    </form>
                </div>
            <a class="no-style-href" href="/"><button class="outline-default mt-5">BACK TO HOME</button></a>
        </div>
    </div>
</body>
<%- include ('partials/footer.ejs') %>