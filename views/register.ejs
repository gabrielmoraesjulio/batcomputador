<%- include ('partials/header.ejs') %>
<body>
    <div class="container d-flex justify-content-center text-center mt-3">
        <a href="/"class="no-style-href"><h1>Batcomputer</h1></a>
        <div class="row">
            <div class="col tab p-5">
                <h1>REGISTER A NEW CRIMINAL PROFILE</h1>
                <form action="/insertnew" method="post">
                    <label for="name" class="mt-3">Name:</label><br>
                    <input type="text" id="name" name="name" class="search-input outline-default">
                    <br>
                    <label for="age" class="mt-3">Age:</label><br>
                    <input type="text" name="age" id="age" class="search-input outline-default">
                    <br>
                    <label for="description" class="mt-3">Description:</label><br>
                    <textarea name="description" id="description" class="search-input outline-default"></textarea>
                    <br>
                    <label for="weakness" class="mt-3">Weakness:</label><br>
                    <input type="text" name="weakness" id="weakness" class="search-input outline-default">
                    <br>
                    <label for="risklevel" class="mt-3">Risk Level:</label><br>
                    <select name="risklevel" id="risklevel" class="search-input outline-default">
                        <option></option>
                        <option value="low">Low</option>
                        <option value="average">Average</option>
                        <option value="high">High</option>
                        <option value="dangerous">Dangerous</option>
                    </select>
                    <br>
                    <label for="arrested" class="mt-3">Arrested:</label><br>
                    <select name="arrested" id="arrested" class="search-input outline-default">
                        <option></option>
                        <option value="yes">Yes</option>
                        <option value="No">No</option>
                    </select>
                    <br>
                    <button class="outline-default mt-3">REGISTER</button>
                </form>
                
            </div>
            <a class="no-style-href" href="/"><button class="outline-default mt-5">BACK TO HOME</button></a>
        </div>
    </div>
</body>
<%- include ('partials/footer.ejs') %>